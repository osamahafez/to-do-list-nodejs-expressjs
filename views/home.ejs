<%- include('layouts/header'); -%>

    <div class="container container-custom">
        <div class="row justify-content-center">
            <button type="button" class="btn btn-info btn-block btn-lg" data-toggle="modal" data-target="#myModal">New Item</button>
        </div>
        
        <!-- The Modal -->
        <div class="modal fade" id="myModal">
            <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
            
                <!-- Modal Header -->
                <div class="modal-header">
                <h4>New Item</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                
                <!-- Modal body -->
                <div class="modal-body">
                    <form action="" method="POST">
                        <div class="form-group">
                            <textarea class="form-control" name="item" id="item" placeholder="What's on your mind.."></textarea>
                        </div>
                        <input type="submit" value="Add" class="btn btn-success float-right"/>
                    </form>
                </div>
                
            </div>
            </div>
        </div>


        <div class="content">
            <input id="1" type="checkbox" /> 
            <label for="1">test</label>
        </div>
    </div>

<%- include('layouts/footer'); -%>