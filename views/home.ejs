<%- include('layouts/header'); -%>

    <div class="container container-custom">
        <div class="row justify-content-center">
            <button type="button" class="btn btn-info btn-block btn-lg" data-toggle="modal" data-target="#myModal">Add New Item</button>
        </div>
        
        <!-- The Modal -->
        <div class="modal fade" id="myModal">
            <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
            
                <!-- Modal Header -->
                <div class="modal-header">
                <h4>New Item</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                
                <!-- Modal body -->
                <div class="modal-body">
                    <form action="/new" method="POST"> 
                        <div class="form-group">
                            <textarea class="form-control" name="content" placeholder="What's on your mind.."></textarea>
                        </div>
                        <input type="submit" value="Add" class="btn btn-success float-right"/>
                    </form>
                </div>
                
            </div>
            </div>
        </div>


        <div class="content">

                <%#-------- viewing all the items I wrote ------%>
                
                <% items.forEach(function(item){ %>
                    
                    <% if(item.checked == true) { %>
                        <input type="checkbox" checked id="<%=item._id%>" class="css-checkbox" />
                    <% } else{ %>
                        <input type="checkbox" id="<%=item._id%>" class="css-checkbox" />
                    <% } %>
                    <label for="<%=item._id%>" class="css-label dark-check-green"><%= item.content %></label>
                    <button type="button" class="close text-danger close-btn" aria-label="Close" data-checkbox="<%=item._id%>">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <hr>
                <% }) %> 

        </div>
    </div>

<%- include('layouts/footer'); -%>